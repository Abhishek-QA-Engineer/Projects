		// calculate the length of String without inbuilt method
		String str= "Abhishek Tanwar";
		str = str.concat("\0");
		
		char[] ch= str.toCharArray();
		
		int count=0;
		int i=0;
		while(ch[i]!='\0')
		{
			count++;
			i++;
		}
		System.out.println("Length of String is " + count);
		
		
       
